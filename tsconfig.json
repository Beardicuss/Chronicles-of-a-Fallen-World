{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "jsx": "react-native",
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts"
    ]
}